<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database Connection Settings -->
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://localhost:1433;DatabaseName=EVDATABASE;encrypt=true;trustServerCertificate=true</property>
        <property name="connection.username">sa</property>
        <property name="connection.password">Thien@271105</property>
        
        <!-- Hibernate Settings -->
        <property name="dialect">org.hibernate.dialect.SQLServer2012Dialect</property>
        <!-- Options for hbm2ddl.auto:
             create-drop: Drop and create tables on start, drop on exit (current)
             create: Drop and create tables on start only
             update: Update existing schema, keep data
             validate: Only validate schema, no changes
             none: Do nothing -->
        <property name="hbm2ddl.auto">create-drop</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        
        <!-- Connection Pool Settings -->
        <property name="connection.pool_size">10</property>
        
        <!-- Entity Mappings -->
        <mapping class="uth.edu.vn.entity.User" />
        <mapping class="uth.edu.vn.entity.TramSac" />
        <mapping class="uth.edu.vn.entity.Charger" />
        <mapping class="uth.edu.vn.entity.DatCho" />
        <mapping class="uth.edu.vn.entity.PhienSac" />
        <mapping class="uth.edu.vn.entity.ThanhToan" />
        <mapping class="uth.edu.vn.entity.GoiDichVu" />
        <mapping class="uth.edu.vn.entity.SuCo" />
        <mapping class="uth.edu.vn.entity.Xe" />
        <mapping class="uth.edu.vn.entity.ThongBao" />
        <mapping class="uth.edu.vn.entity.HoaDon" />
        <mapping class="uth.edu.vn.entity.BaoCao" />
        <mapping class="uth.edu.vn.entity.DieuKhienTuXa" />
    </session-factory>
</hibernate-configuration>
